  <div class="row">
 <%= render 'instructor/schedule', today_schedules: @today_schedules %>
 <div class="col-8 mt-2">
  <h5 class="d-flex justify-content-start bg-success p-2 text-dark bg-opacity-50">受講者詳細</h5>

  <table class="table">
   <tbody>
    <tr>
     <th class="col-3">受講生徒名</th>
     <td class="col-7"><%= @course.student.name %></td>
    </tr>
    <tr>
     <th>住所</th>
     <td><%= @course.student.address %></td>
    </tr>
    <tr>
     <th>電話番号</th>
     <td><%= @course.student.phone %></td>
    </tr>
   </tbody>
  </table>

<h5 class="d-flex justify-content-start bg-success p-2 text-dark bg-opacity-50">受講内容</h5>
  <table class="table">
    <thead>
     <tr>
      <th scope="col">入校日</th>
      <th scope="col">担当者</th>
      <th scope="col">受講車種</th>
      <th scope="col">ステータス</th>
      <th scope="col">コメント数</th>
     </tr>
    </thead>
    <tbody>
     <td><%= l @course.start_time %></td>
     <td><%= @course.instructor.name %></td>
     <td><%= @course.car_model_i18n %></td>
     <td>
     <% if @course.status_i18n == "卒業" %>
     卒業
     <% else %>
     在籍中
     <% end %>
     </td>
     <td><%= @course.comments.count %>件</td>
    </tbody>
  </table>


<div>
 <%= form_with model: [@course, @comment] do |f| %>
    <%= f.select :howmany, options_for_select(['1段階-1','1-2','1-3','1-4','1-5','1-6','1-7','1-8','1-9','1-10','1-11以降',
        '2段階-1','2-2','2-3','2-4','2-5','2-6','2-7','2-8','2-9','2-10','2-11以降']) %>
    <%= f.text_area :comment_body, size:"65x1", placeholder: "コメントをここに" %>
    <%= f.submit "送信" %>
  <% end %>
</div>

<h5 class="d-flex justify-content-start bg-success p-2 text-dark bg-opacity-50">コメント内容</h5>
  <table class="table">
    <thead>
     <tr>
      <th scope="col">日時</th>
      <th scope="col">段階</th>
      <th scope="col">コメント者</th>
      <th scope="col">内容</th>
     </tr>
    </thead>
 <% @course.comments.each do |comment| %>
    <tbody>
     <td><%= l comment.created_at %></td>
     <td><%= comment.howmany %></td>
     <td><%= comment.instructor.name %></td>
     <td><%= comment.comment_body %></td>
    </tbody>
 <% end %>
  </table>

</div>
</div>

