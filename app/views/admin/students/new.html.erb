<div class="row mt-4">
  <%= render 'admin/search' %>
 <div class="col">

 <% if @student.errors.any? %>
  <%= @student.errors.count %>件のエラーが発生しました
  <ul>
    <% @student.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class="row">
    <div class="col-auto mt-5" style="background-color: darkgray;">
     <h5>新規生徒登録</h5>
    </div>
  </div>

<%= form_with model: @student, url: admin_students_path do |f| %>

  <div class="row justify-content-start mt-3">
   <div class="col-3 ml-4">
    <p>名前</p>
   </div>
    <div class="col-3 me-4">
    <%= f.text_field :last_name, placeholder: "(姓)" %>
    </div>
    <div class="col-3">
    <%= f.text_field :first_name, placeholder: "(名)" %>
   </div>
  </div>

  <div class="row justify-content-start mt-3">
   <div class="col-3 ml-4">
    <p>フリガナ</p>
   </div>
   <div class="col-3 me-4">
    <%= f.text_field :last_name_kana, placeholder: "(セイ)" %>
   </div>
   <div class="col-3">
    <%= f.text_field :first_name_kana, placeholder: "(メイ)" %>
   </div>
  </div>

  <div class="row justify-content-start mt-3">
    <div class="col-3 ml-4">
     <p>生年月日</p>
    </div>
    <div class="col-6">
    <%= f.date_field :birthday %>
    </div>
  </div>

  <div class="row justify-content-start mt-3">
   <div class="col-3 ml-4">
    <p>住所</p>
   </div>
   <div class="col-6">
    <%= f.text_area :address, size: "50x1" %>
   </div>
  </div>

  <div class="row justify-content-start mt-3">
   <div class="col-3 ml-4">
    <p>電話番号</p>
   </div>
   <div class="col-6">
    <%= f.text_field :phone %>
   </div>
  </div>

  <div class="row justify-content-start mt-3">
   <div class="col-3 ml-4"></div>
   <div class="d-grid gap-2 col-6">
    <%= f.submit "コース登録へ", class: 'btn btn-success px-5' %>

   </div>
  </div>
    <% end %>
 </div>
</div>
